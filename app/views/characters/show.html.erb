<div class="panel panel-default">
  <div class="panel-body">
    <div class="row">
      <div class="col-md-4">
        <%= image_tag @character.image.url(:medium) %>
      </div>
          <div class="col-md-7">
            <h1><%= @character.name %></h1>
            <p><%= @character.backstory %></p>
            <p><strong>Allies:</strong> <%= @character.allies %></p>
            <p><strong>Enemies:</strong> <%= @character.enemies %></p>
            <p><strong>Nemesis:</strong> <%= @character.nemesis %></p>
          </div>
        </div>
    </div>
  </div>
</div>

<%= link_to 'Edit', edit_character_path(@character) %> |
<%= link_to 'Back', characters_path %>
